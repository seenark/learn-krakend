{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Learn-KrakenD",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/ngx",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:3000",
            "http://host.docker.internal:3002"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:3001"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/assets/main.css",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/assets/main.css",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:3001"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}